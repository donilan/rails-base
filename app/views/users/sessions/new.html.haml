= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  = f.error_notification
  %h3.form-signin-heading= t :signin_title
  .field
    = f.input :login, autofocus: true, input_html: Rails.env.development? ? { value: t(:signin_default_username) } : {}
  .field
    = f.input :password, autocomplete: "off", input_html: Rails.env.development? ? { value: t(:signin_default_password) } : {}
  - if devise_mapping.rememberable?
    .field
      = f.check_box :remember_me
      = f.label :remember_me
  .actions
    = f.button :submit, t(:signin), class: 'btn-primary btn-block'
